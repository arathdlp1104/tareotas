import java.util.Scanner;

public class DatosUsuario {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        // Solicitar Domicilio Completo
        System.out.println("Ingrese su domicilio:");
        System.out.print("Calle: ");
        String calle = scanner.nextLine();
        System.out.print("Número exterior: ");
        String numeroExterior = scanner.nextLine();
        System.out.print("Número interior (si aplica): ");
        String numeroInterior = scanner.nextLine();
        System.out.print("Colonia: ");
        String colonia = scanner.nextLine();
        System.out.print("Ciudad: ");
        String ciudad = scanner.nextLine();
        System.out.print("Estado: ");
        String estado = scanner.nextLine();
        System.out.print("Código Postal: ");
        String codigoPostal = scanner.nextLine();  
        
        // Solicitar Datos de Educación
        System.out.println("\nIngrese los datos de su educación:");
        System.out.print("Nombre de la primaria: ");
        String primaria = scanner.nextLine();
        System.out.print("Nombre de la secundaria: ");
        String secundaria = scanner.nextLine();
        System.out.print("Nombre de la preparatoria: ");
        String preparatoria = scanner.nextLine();
        
        // Solicitar Datos del Deporte Favorito
        System.out.println("\nIngrese los datos de su deporte favorito:");
        System.out.print("Nombre del deporte: ");
        String deporte = scanner.nextLine();
        System.out.print("Posición o rol en el deporte: ");
        String posicion = scanner.nextLine();
        System.out.print("Equipo favorito: ");
        String equipoFavorito = scanner.nextLine();
        System.out.print("Tiempo practicando (años): ");
        int tiempoPracticando = scanner.nextInt();

        // Mostrar la información ingresada
        System.out.println("\n--- Información Ingresada ---");
        System.out.println("Domicilio: " + calle + " #" + numeroExterior + 
            (numeroInterior.isEmpty() ? "" : " Int. " + numeroInterior) + 
            ", Colonia " + colonia + ", " + ciudad + ", " + estado + ", C.P. " + codigoPostal);
        System.out.println("Educación: Primaria: " + primaria + ", Secundaria: " + secundaria + 
            ", Preparatoria: " + preparatoria);
        System.out.println("Deporte favorito: " + deporte + ", Posición: " + posicion + 
            ", Equipo favorito: " + equipoFavorito + ", Tiempo practicando: " + tiempoPracticando + " años");
        
        scanner.close();
    }
}
